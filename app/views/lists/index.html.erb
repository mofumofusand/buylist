<%= render "shared/header" %>

<div class="main">

  <%# 買い物リスト一覧 %>
  <div class='list-contents'>
    <h2 class='title'>買い物リスト</h2>
    <div class="subtitle" >
      登録されてるカテゴリー<br>
      <% @categories.each do |category| %>
          <%= category.tag_name %>
      <% end %>
    </div>
    <div class="categories">
      <ul class='item-lists'>
        <% @categories.each do |category| %>
        <h2><%= category.tag_name %></h2>
          <% category.lists.each do |list| %>
            <li class='list'>
              <%= link_to list_path(list.id) do %>
              <div class='list-info'>
                <div class='list-name'>
                  <%= list.content %>
                </div>
                <div class='list-quantity'>
                  <%= list.quantity %>
                </div>
              </div>
              <% end %>
              <div class="edit-destroy">
                <%= link_to "編集", edit_list_path(list.id), method: :get, class: "list-red-btn" %>
                <%= link_to "削除", list_path(list.id), data: {turbo_method: :delete}, class:"list-destroy" %>
              </div>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="list-new">
    <%= link_to "追加ページ", new_list_path, class:"new-list" %>
  </div>
  <%# /買い物リスト一覧 %>
</div>