<%= render "shared/second-header"%>

<div class="contents row">
  <div class="container">
    <h3>追加ページ</h3>
    <%= form_with model: @list_form,  url: lists_path, local: true do |form| %>
      <%= form.text_field :content, placeholder: "購入する物" %>
      <%= form.text_field :quantity, placeholder: "数量や個数" %>
      <div class="tag-field">
        <%= form.text_field :tag_name, placeholder: 'カテゴリー' %>
        <div id="search-result"></div>
      </div>
      <%= form.submit "追加" %>
    <% end %>
  </div>
</div>